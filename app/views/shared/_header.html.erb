<div class="bg-white flex justify-between items-center px-2" data-controller="menu">
    <%= link_to home_path do %>
        <h1 class="text-2xl font-bold text-teal-500"><%= t('app_name') %></h1>
    <% end %>
    
    <button class="sm:hidden" data-action="click->menu#toggle">
        <%= icon "bars-3", variant: "solid", class: ["size-7"] %>
    </button>
    <div class="gap-4 sm:hidden absolute bg-white top-0 right-0 shadow z-10 h-full flex flex-col min-w-[45%] overflow-y-scroll ease-in-out duration-200 p-5 translate-x-full" data-menu-target="menu">
        <button class="mb-4" data-action="click->menu#toggle">
            <%= icon "x-mark", variant: "solid", class: ["size-7"] %>
        </button>
        <%= render partial: 'shared/menu'%> 
    </div> 
    <div class="hidden sm:flex">
        <%= render partial: 'shared/menu'%> 
    </div>
    
</div>